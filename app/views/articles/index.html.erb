<div class="title">
  <h2>List of Articles</h2>
</div>

<div class="index">
  <% @articles.each do |article| %>
    <h3><%= link_to article.title, article_path(article) %></h3>
    <p><%= article.content %></p>
  <% end %>
</div>

<div class="links">
  <%= link_to 'Create a new Article',new_article_path %>
</div>
