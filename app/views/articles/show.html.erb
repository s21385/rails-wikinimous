<div class="title">
  <h3>Title:</h3> <h4><%= @article.title %></h4>
</div>
<div class="content">
  <h3>Content:</h3> <p><%= @article.content %></p>
</div>

<div class="links">
  <%= link_to 'Edit Article', edit_article_path(@article) %>

  <%= link_to 'Delete Article', article_path(@article),
        method: :delete,
        data: { confirm: "Are you sure?" } %>

  <%= link_to 'Create a new Article',new_article_path %>

  <%= link_to 'Back to Articles List', root_path %>
</div>
